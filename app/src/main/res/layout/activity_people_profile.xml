<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_people_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tacademy.petpp.PeopleProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <Button
            android:text="이전"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주인님이 궁금해요!"
            android:textColor="#FFFFFF"
            />

        <Button
            android:text="다음"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:onClick="onPProfileNext"
            />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/personLinearLayout">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/profile"
                    android:onClick="onPImageView"/>

                <TextView
                    android:text="* 이름"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/textView4"
                    android:paddingTop="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:background="@drawable/edittext_back_line"
                    android:paddingTop="5dp"/>

                <TextView
                    android:text="전화번호"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/textView6"
                    android:paddingTop="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/editText5"
                    android:hint=" - 없이 입력 "
                    android:paddingTop="5dp"
                    android:background="@drawable/edittext_back_line" />

                <TextView
                    android:text="* 나이"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/textView7"
                    android:paddingTop="10dp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/spinner"
                    android:paddingTop="5dp"/>

                <TextView
                    android:text="* 성별"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:paddingTop="10dp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/XYSpinner"
                    android:paddingTop="5dp"/>

                <TextView
                    android:text="주소"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:paddingTop="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:inputType="textPostalAddress"
                    android:ems="10"
                    android:background="@drawable/edittext_back_line"
                    android:id="@+id/editText4"/>


                <TextView
                    android:text="나이랑 성별은 누르면 밑에 아이콘스코롤 느낌으로.선택지"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/textView" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
