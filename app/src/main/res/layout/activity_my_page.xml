<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mypage.act.MyPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <Button
            android:text="이전"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:id="@+id/onBACK"
            android:onClick="onBACK"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_height="120dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/imageView2"
                    android:layout_width="120dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="2">

                        <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:text="21살"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textView12"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <TextView
                            android:text="나이"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textView2"
                            android:layout_weight="1"
                            android:gravity="center"/>
                    </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:text="여자"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:text="성별"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:text="송내동"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:text="위치"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:text="산책예약하기"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/scheduleBtn"
                                android:layout_weight="1"
                                android:visibility="visible"/>

                            <Button
                                android:text="메시지보내기"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/messageBtn"
                                android:layout_weight="1"
                                android:visibility="visible"/>
                        </LinearLayout>

                        <Button
                            android:text="프로필 수정하기"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editProfileBtn"
                            android:layout_weight="1"
                            android:visibility="invisible"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:text="안녕하세요 ^^ 초코맘입니다~ 항상 아이들을 행복하게 산책시켜주고 있습니다! 잘부탁드립니다^^~!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_mypage_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2" />

    </LinearLayout>

    <include layout="@layout/left_menu_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
