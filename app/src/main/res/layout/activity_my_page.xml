<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mypage.act.MyPageActivity">

    <include layout="@layout/feed_top_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/topMarginSize"
        android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/linearLayout2"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_height="97dp"
                    android:src="@mipmap/img_people_profile"
                    android:id="@+id/imageView2"
                    android:layout_width="97dp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:text="21살"
                            android:textSize="@dimen/fontOneTwoSize"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textView12"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:text="나이"
                            android:textSize="@dimen/fontOneZeroSize"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textView2"
                            android:layout_weight="1"
                            android:gravity="center"/>
                    </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:text="여자"
                                android:textSize="@dimen/fontOneTwoSize"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:text="성별"
                                android:textSize="@dimen/fontOneZeroSize"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:text="송내동"
                                android:textSize="@dimen/fontOneTwoSize"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:text="위치"
                                android:textSize="@dimen/fontOneZeroSize"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="0"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:text="산책예약하기"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/fontOneZeroSize"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:id="@+id/scheduleBtn"
                                android:layout_weight="1"
                                android:visibility="visible"
                                android:background="@color/colorBase"/>

                            <Button
                                android:text="메시지보내기"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/fontOneZeroSize"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/messageBtn"
                                android:layout_weight="1"
                                android:visibility="visible"
                                android:background="@color/colorBase"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:text="견주 프로필\n수정"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/fontOneZeroSize"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:id="@+id/editPProfileBtn"
                                android:layout_weight="1"
                                android:visibility="invisible"
                                android:background="@color/colorBase" />

                            <Button
                                android:text="반려견 프로필\n수정"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/fontOneZeroSize"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/editDProfileBtn"
                                android:layout_weight="1"
                                android:visibility="invisible"
                                android:background="@color/colorBase"/>

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="31.7dp"
        android:background="@color/colorTLLine"></FrameLayout>

    <include layout="@layout/include_mypage_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2" />

    </LinearLayout>

    <include layout="@layout/left_menu_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
