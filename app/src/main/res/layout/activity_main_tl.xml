<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.act.MainTLActivity">

    <include layout="@layout/top_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include" />

    <include layout="@layout/include_tl_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/main_ui"
        android:layout_below="@+id/include" />

    <include layout="@layout/left_menu_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
