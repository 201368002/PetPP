<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cal_write"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tacademy.petpp.ui.leftmenu.CalWriteActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <Button
            android:text="이전"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:id="@+id/onBACK"
            android:onClick="onBACK"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="시터 일정 등록"
            android:gravity="center"/>

        <Button
            android:text="완료"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_gravity="right"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <TextView
            android:text="* 주소"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView18" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="주소 입력"
            android:ems="10" />

        <TextView
            android:text="* 날짜 선택"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView21" />

        <TextView
            android:text="YY-MM-DD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calendarView"
            android:visibility="gone"/>

        <TextView
            android:text="* 산책 시간 선택"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="00시 ~ 00시"
            android:ems="10"
            android:id="@+id/editText6" />

        <TextView
            android:text="* 성별"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView20" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_dog_XYSpinner" />

        <TextView
            android:text="무게"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView22" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner6" />

        <TextView
            android:text="* 중성화여부"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView23" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner7" />

    </LinearLayout>

</RelativeLayout>
