<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dog_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tacademy.petpp.DogProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <Button
            android:text="이전"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:id="@+id/onBACK"
            android:onClick="onBACK"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반려견을 소개해요!"
            android:textColor="#FFFFFF"
            />

        <Button
            android:text="완료"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:onClick="onDProfileNext"
            />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@mipmap/profile"
                android:onClick="onDImageView"/>

            <TextView
                android:text="* 이름"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView4"
                android:paddingTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:background="@drawable/edittext_back_line"
                android:paddingTop="5dp"/>

            <TextView
                android:text="* 견종"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView6"
                android:paddingTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editText5"
                android:hint=" - 없이 입력 "
                android:paddingTop="5dp"
                android:background="@drawable/edittext_back_line" />

            <TextView
                android:text="* 나이"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView7"
                android:paddingTop="10dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/spinner"
                android:paddingTop="5dp"/>

            <TextView
                android:text="* 성별"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:paddingTop="10dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/spinner2"
                android:paddingTop="5dp" />

            <TextView
                android:text="무게"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:paddingTop="10dp"/>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/spinner3"
                android:paddingTop="5dp"/>

            <TextView
                android:text="성격"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingTop="10dp"
                android:id="@+id/textView10" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:background="@drawable/edittext_back_line"
                android:paddingTop="5dp"/>

            <TextView
                android:text="질병 및 특이사항"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:background="@drawable/edittext_back_line"
                android:paddingTop="5dp"/>

            <TextView
                android:text="* 중성화여부"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingTop="10dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/spinner4"
                android:paddingTop="5dp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:text="건너뛰기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:onClick="onTLNext"/>

        <Button
            android:text="추가하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
